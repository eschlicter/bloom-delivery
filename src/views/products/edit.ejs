<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Product</h1>

      <form action="/products/<%= product.id %>/update" method="post">
        <div class="form-group">
            <label for="title">Product Title</label>
            <input value="<%= product.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea rows="4" class="form-control" name="description" placeholder="Enter Description"><%= product.description %></textarea>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <textarea rows="1" class="form-control" name="price" placeholder="Enter Price"><%= product.price %></textarea>
        </div>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>